<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#1f1f1f">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1f1f1f">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fgImgBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fg_black"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fgImgWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fg_white"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fgImgYellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_yellow"/>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1f1f1f">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fgImgOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fg_orange"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fgImgRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_red"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fgImgDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fg_darkgreen"/>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1f1f1f">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fgImgBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fg_blue"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fgImgPurple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fg_purple"/>
    </LinearLayout>
</LinearLayout>